<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="128dp"
    android:orientation="horizontal">
    <View
        android:layout_width="10dp"
        android:layout_height="128dp"/>

    <watermelon.lightmusic.view.ColorfulCard
        android:id="@+id/item_home_daily_recommended_song_list_colorful_card"
        android:layout_width="102dp"
        android:layout_height="128dp"
        android:orientation="vertical"
        app:strokeWidth="0dp"
        app:cardElevation="@dimen/cardview_compat_inset_shadow"
        android:layout_marginBottom="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/item_home_daily_recommended_song_list_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="0dp">

                <ImageView
                    android:id="@+id/item_home_daily_recommended_song_list_pic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/item_home_daily_recommended_song_list_name"
                android:layout_width="100dp"
                android:layout_height="28dp"
                android:textSize="10dp"
                android:textAlignment="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_home_daily_recommended_song_list_card" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </watermelon.lightmusic.view.ColorfulCard>
</LinearLayout>